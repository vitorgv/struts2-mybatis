<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.struts2mybatis.persistence.PersonMapper">
    <resultMap id="PersonResult" type="Person">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="surname" column="surname"/>
        <result property="birthDate" column="birth_date" jdbcType="DATE"/>
        <result property="age" column="age"/>
        <result property="insertTimestamp" column="insert_timestamp" jdbcType="TIMESTAMP"/>
        <result property="updateTimestamp" column="update_timestamp" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="BaseColumnList">
        id, name, surname, birth_date, age, insert_timestamp, update_timestamp
    </sql>

    <select id="findAll" resultMap="PersonResult">
        SELECT <include refid="BaseColumnList"/>
        FROM persons
        ORDER BY insert_timestamp DESC
    </select>

    <select id="findById" parameterType="int" resultMap="PersonResult">
        SELECT <include refid="BaseColumnList"/>
        FROM persons
        WHERE id = #{id}
    </select>

    <insert id="insertPerson" parameterType="Person" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO persons (name, surname, birth_date, age, insert_timestamp, update_timestamp)
        VALUES (#{name}, #{surname}, #{birthDate}, #{age}, #{insertTimestamp}, #{updateTimestamp})
    </insert>

    <update id="updatePerson" parameterType="Person">
        UPDATE persons
        SET name = #{name},
            surname = #{surname},
            birth_date = #{birthDate},
            age = #{age},
            update_timestamp = #{updateTimestamp}
        WHERE id = #{id}
    </update>

    <delete id="deletePerson" parameterType="int">
        DELETE FROM persons WHERE id = #{id}
    </delete>
</mapper>
